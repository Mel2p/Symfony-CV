{% extends "MPPlatformBundle::layout.html.twig" %}
{% block title %}
    Lecture d'un article - {{ parent() }}
{% endblock %}
{% block mpplatform_body %}
    <div>
        {% if advert.image is not null %}
            <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}" style="width: 140px;height: 60px;float:left;margin-right: 5px;">
        {% endif %}
        <h2>{{ advert.title }}</h2>
        <i>Le {{ advert.date|date('d/m/Y') }}</i>
    </div>

    <div class="well">
        {{ advert.content }}
    </div>

    <p>
        <a href="{{ path('mp_platform_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour Ã  la liste
        </a>
        <a href="{{ path('mp_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'article
        </a>
        <a href="{{ path('mp_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'article
        </a>
    </p>

{% endblock %}